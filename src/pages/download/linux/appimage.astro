---
import BaseLayout from "@layouts/BaseLayout.astro"
import Button from "@components/Button.astro";

import "@root/index.scss";
---

<BaseLayout>
  <div id="index">
  <img src="/logo.svg" alt="ArmCord Logo :O" />
  <div id="options">
    <Button name="Home" href="/" />
    <Button name="Download" href="/download" />
    <Button name="FAQ" href="/faq" />
  </div><br>
  <div id="download">
    <div>
      <Button name="AMD64" href="https://github.com/ArmCord/ArmCord/releases/download/v3.0.7/ArmCord-3.0.7.AppImage" />
      <Button name="ARM64" href="https://github.com/ArmCord/ArmCord/releases/download/v3.0.7/ArmCord-3.0.7-arm64.AppImage" />
      <Button name="ARM32" href="https://github.com/ArmCord/ArmCord/releases/download/v3.0.7/ArmCord-3.0.7-armv7l.AppImage" />
    </div>
  </div>
  </div>
</BaseLayout>