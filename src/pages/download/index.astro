---
import BaseLayout from "@layouts/BaseLayout.astro"
import IconButton from "@components/IconButton.astro";
import "@root/index.scss";
---

<BaseLayout>
  <script is:inline src="/getLatest.js"></script>
  <div id="download">
    <h1>Downloads</h1>
    <div>
      <IconButton vectorIcon="/platform-icons/windows.svg" name="Windows" href={`/download/windows`} />
      <IconButton vectorIcon="/platform-icons/linux.svg" name="Linux" href="/download/linux" />
      <IconButton vectorIcon="/platform-icons/mac.svg" name="MacOS" href={`https://github.com/ArmCord/ArmCord/releases/download/vVERSIONNUM/ArmCord-VERSIONNUM.dmg`} />
    </div>
  </div>
</BaseLayout>