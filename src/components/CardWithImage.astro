---
const { title } = Astro.props;
const { img } = Astro.props;
const { alt } = Astro.props;
---

<style lang="scss">
  div {
    margin: 1rem;
    color: #95a7b3;
    transition: color 0.4s;
    transition: box-shadow 0.4s;
    width: 500px;
    background-color: #2f3136;
    font-family: sans-serif;
    vertical-align: middle;
    text-align: center;
    border-radius: 5px;
    padding-bottom: 1rem;

    &:hover {
      color: #dddddd;
      box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
    }
  }

  content {
    display: block;
    padding: 0 1rem;
    font-size: large;
  }
  img {
    width: 500px;
  }
</style>

<div>
  <a href=`https://armcord.xyz/${img}`>
  <img alt=`${alt}` src=`${img}`/>
</a>
  <h2> {title} </h2>
  <content>
    <slot />
  </content>
</div>