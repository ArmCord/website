---
const { title, width } = Astro.props;
---

<style lang="scss">
  div {
    margin: 1rem;
    color: #fff;
    transition: color 0.4s;
    transition: box-shadow 0.4s;
    background-color: #2f3136;
    font-family: sans-serif;
    vertical-align: middle;
    text-align: center;
    border-radius: 5px;
    padding-bottom: 1rem;
    border-bottom: 4px solid #7289da;
    box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
  }

  content {
    display: block;
    padding: 0 1rem;
    font-size: medium;
  }
</style>

<div style={`width: ${width};`}>
  <h2> {title} </h2>
  <content>
    <slot />
  </content>
</div>